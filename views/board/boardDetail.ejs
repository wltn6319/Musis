<%- include('../header') %>

    <div class="col-sm-10" style="padding: 100px; width: 100%;">
       
        <div class="panel panel-default">
            <div class="panel-heading" style="display: flex; justify-content: space-between;">
               <span>작성자 :  <%=boards.userID%>  </span>
               <span>
                <a href="/board/list"><button  type="button" class="btn btn-primary">목록</button></a>
                <%if(boards.userID === decode.id) {%>
                <a href="/board/boardUpdate/<%=boards.id%>"><button  type="button" class="btn btn-primary">수정</button></a>
                <%};%>   
             </span>         
            </div>
            
            <div class="panel-body">

                <div>
                    작성일 : <%=boards.getDate.year%>-<%=boards.getDate.month%>-<%=boards.getDate.day%>
                </div>
                <div>
                    제목 : <%-boards.title%>
                </div>
                
                <div>
                    내용 : <%-boards.content%>
                </div>
            </div>
        </div>
        
    </div>
    <%- include('../footer') %>
